{
    "include": [
        ".",
        "./.react-router/types",
        "./../../packages/components",
        "./../../packages/react-router-hono-server",
    ],
    "exclude": [
        "node_modules",
        "build",
        "pm2.config.cjs"
    ],
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM.Iterable",
            "DOM"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noPropertyAccessFromIndexSignature": false,
        "rootDirs": [
            ".",
            "./.react-router/types"
        ],
        "paths": {
            "~/*": [
                "./app/*"
            ],
            "@/*": [
                "./*"
            ],
            "@app/utils/*": [
                "./../../packages/utils/src/*"
            ],
            "@app/components/*": [
                "./../../packages/components/src/*"
            ],
            "react-router-hono-server/*": [
                "./../../packages/react-router-hono-server/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "./../../packages/components"
        },
        {
            "path": "./../../packages/react-router-hono-server"
        }
    ]
}