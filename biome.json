{
    "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
    "files": {
        "includes": [
            "**/*.{tsx,ts,json,css,cjs}",
            "!**/node_modules/*",
            "!**/dist/*",
            "!**/build/*",
            "!**/public/*",
            "!**/pm2.config.cjs",
            "!**/.react-router/*",
            "!**/redis/*",
            "!**/meilisearch/*",
            "!**/prisma/client/*",
            "!**/clickhouse/*",
            "!**/.vitepress/*"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "useExhaustiveDependencies": "off",
                "noUnusedImports": "error",
                "useJsxKeyInIterable": "error"
            },
            "style": {
                "noParameterAssign": "off",
                "useImportType": "error"
            },
            "nursery": {
                "useSortedClasses": {
                    "level": "info",
                    "options": {
                        "attributes": ["classList"],
                        "functions": ["cn", "cva", "tw", "tw.*"]
                    }
                }
            },
            "a11y": {
                "useSemanticElements": "info",
                "noStaticElementInteractions": "info",
                "useKeyWithClickEvents": "info"
            },
            "suspicious": {
                "noArrayIndexKey": "info"
            }
        }
    },
    "formatter": {
        "lineWidth": 130,
        "indentWidth": 4,
        "indentStyle": "space"
    }
}
