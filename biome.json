{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "includes": [
            "**/*.{tsx,ts,json,css}",
            "!**/node_modules/*",
            "!**/dist/*",
            "!**/build/*",
            "!**/public/*",
            "!**/pm2.config.cjs",
            "!**/.react-router/*",
            "!**/redis/*",
            "!**/meilisearch/*",
            "!**/wailsjs/*",
            "!**/prisma/client/*",
            "!**/clickhouse/*",
            "!**/.vitepress/*"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "useExhaustiveDependencies": "off",
                "noUnusedImports": "error",
                "useJsxKeyInIterable": "error"
            },
            "style": {
                "noParameterAssign": "off",
                "useImportType": "error"
            },
            "nursery": {
                "noTsIgnore": "off",
                "useUniqueElementIds": "off",
                "useSortedClasses": "info"
            },
            "a11y": {
                "useSemanticElements": "info",
                "noStaticElementInteractions": "info",
                "useKeyWithClickEvents": "info"
            },
            "suspicious": {
                "noArrayIndexKey": "info"
            }
        }
    },
    "formatter": {
        "lineWidth": 130,
        "indentWidth": 4,
        "indentStyle": "space"
    }
}
