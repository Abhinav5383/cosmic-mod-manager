{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src"
    ]
}